<resources>
  <declare-styleable name="OtpViewTheme">
    <attr format="reference" name="otpViewStyle"/>
  </declare-styleable>

  <declare-styleable name="OtpView">
    <attr format="integer" name="OtpItemCount"/>
    <attr format="dimension" name="OtpItemWidth"/>
    <attr format="dimension" name="OtpItemHeight"/>
    <attr format="dimension" name="OtpItemRadius"/>
    <attr format="dimension" name="OtpItemSpacing"/>
    <attr format="dimension" name="OtpLineWidth"/>
    <attr format="reference|color" name="OtpLineColor"/>
    <attr format="enum" name="OtpViewType">
      <enum name="rectangle" value="0"/>
      <enum name="line" value="1"/>
      <enum name="none" value="2"/>
    </attr>
    <attr name="android:cursorVisible"/>
    <attr name="android:textAllCaps"/>
    <attr format="dimension" name="OtpCursorWidth"/>
    <attr format="reference|color" name="OtpCursorColor"/>
    <attr name="android:itemBackground"/>
    <attr format="boolean" name="OtpHideLineWhenFilled"/>
    <attr format="boolean" name="OtpState_filled"/>
    <attr format="boolean" name="OtpRtlTextDirection"/>
    <attr format="string" name="OtpMaskingChar"/>
  </declare-styleable>

  <declare-styleable name="CirleImageView">
    <attr name="civ_border_width" format="dimension" />
    <attr name="civ_border_color" format="color" />
    <attr name="civ_border_overlay" format="boolean" />
    <attr name="civ_fill_color" format="color" />
    <attr name="civ_circle_background_color" format="color" />
  </declare-styleable>

    <declare-styleable name="RangeSeekBar">
      <attr name="absoluteMinValue" format="integer|float"/>
      <attr name="absoluteMaxValue" format="integer|float"/>
      <attr name="singleThumb" format="boolean"/>
    </declare-styleable>

  <declare-styleable name="SmileBar">
    <attr name="smileWidth" format="dimension"/>
    <attr name="smileHeight" format="dimension"/>
    <attr name="horizontalSpacing" format="dimension"/>
    <attr name="enabled" format="boolean"/>
    <attr name="rating" format="integer"/>
    <attr name="smileDefault" format="reference"/>
    <attr name="smileRate1" format="reference"/>
    <attr name="smileRate2" format="reference"/>
    <attr name="smileRate3" format="reference"/>
    <attr name="smileRate4" format="reference"/>
    <attr name="smileRate5" format="reference"/>
    <attr name="emojiRate1" format="reference"/>
    <attr name="emojiRate2" format="reference"/>
    <attr name="emojiRate3" format="reference"/>
    <attr name="emojiRate4" format="reference"/>
    <attr name="emojiRate5" format="reference"/>
  </declare-styleable>

</resources>
