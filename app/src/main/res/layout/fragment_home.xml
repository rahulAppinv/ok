<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/container"
    android:background="@color/bg_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivOkra"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_15"
        android:src="@mipmap/frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UsingOnClickInXml" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_25"
        android:src="@mipmap/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UsingOnClickInXml" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivOkra"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivOkra"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/axiforma_regular"
                android:gravity="center"
                android:text="@string/hello"
                android:textColor="@color/grey_3"
                android:textSize="@dimen/sp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/axiforma_bold"
                android:textColor="@color/black_2"
                android:textSize="@dimen/sp_30"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_hello"
                tools:text="HUWHUKJGU" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_strips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_name">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_5"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/subContainer"
                        android:background="@color/bg_grey"
                        android:padding="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTestLogged"
                            style="@style/textContainer"
                            android:layout_width="@dimen/dp_0"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_bold"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/sp_28"
                            app:layout_constraintEnd_toStartOf="@id/ivTestRefresh"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry"
                            tools:text="1045" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivTestRefresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/refresh_data"
                            android:padding="@dimen/dp_10"
                            app:layout_constraintBottom_toBottomOf="@+id/tvTestLogged"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTestLoggedText"
                            style="@style/textContainer"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="@string/total_tests_logged"
                            android:textColor="@color/grey_3"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTestLogged"
                            tools:ignore="RtlSymmetry" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_5"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/subContainer"
                        android:background="@color/bg_grey"
                        android:padding="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMealLogged"
                            style="@style/textContainer"
                            android:layout_width="@dimen/dp_0"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_bold"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/sp_28"
                            app:layout_constraintEnd_toStartOf="@id/ivMealRefresh"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry"
                            tools:text="985" />


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMealRefresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/refresh_data"
                            android:padding="@dimen/dp_10"
                            app:layout_constraintBottom_toBottomOf="@+id/tvMealLogged"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMealLoggedText"
                            style="@style/textContainer"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:text="@string/total_meals_logged"
                            android:textColor="@color/grey_3"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvMealLogged"
                            tools:ignore="RtlSymmetry" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/ll_strips">

                <RelativeLayout
                    android:id="@+id/rl_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/axiforma_bold"
                        android:text="@string/today"
                        android:textColor="@color/green_1"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_today"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_below="@id/tv_today"
                        android:layout_marginStart="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/bg_circle_green"
                        android:backgroundTint="@color/green_1" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_this_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_this_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/axiforma_bold"
                        android:gravity="center"
                        android:text="@string/this_week"
                        android:textColor="@color/grey_3"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_this_week"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_below="@id/tv_this_week"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/bg_circle_green"
                        android:backgroundTint="@color/bg_grey" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_this_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_this_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/axiforma_bold"
                        android:gravity="center"
                        android:text="@string/this_month"
                        android:textColor="@color/grey_3"
                        android:textSize="@dimen/sp_18" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_this_month"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_below="@id/tv_this_month"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/bg_circle_green"
                        android:backgroundTint="@color/bg_grey" />

                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:elevation="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                app:cardBackgroundColor="@color/bg_grey"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_time"
                card_view:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_15"
                        android:ellipsize="end"
                        android:fontFamily="@font/axiforma_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/average_blood_glucose_mg_dL"
                        android:textColor="@color/grey_3"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@id/tv_time"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_unit" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_no_chart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:ellipsize="end"
                        android:fontFamily="@font/axiforma_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/no_chart_data_available"
                        android:textColor="@color/black_2"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:fontFamily="@font/axiforma_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/time"
                        android:textColor="@color/grey_3"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/cv_chart">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_5"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/subContainer"
                        android:background="@color/bg_grey"
                        android:padding="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivTotalTests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/total_tests"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="UsingOnClickInXml" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTotalTestValue"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/sp_20"
                            android:text="@string/_0"
                            android:maxLength="7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivTotalTests"
                            tools:ignore="RtlSymmetry"
                            tools:text="145" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTotalSteps"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:text="@string/total_tests"
                            android:textColor="@color/grey_3"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTotalTestValue"
                            tools:ignore="RtlSymmetry" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_5"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/subContainer"
                        android:background="@color/bg_grey"
                        android:padding="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivAvgBg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/avg_bg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="UsingOnClickInXml" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAvgBgValue"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/sp_20"
                            android:text="@string/_0"
                            android:maxLength="7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivAvgBg"
                            tools:ignore="RtlSymmetry"
                            tools:text="120 mg/dL" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAvgBg"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:text="@string/avg_bg"
                            android:textColor="@color/grey_3"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvAvgBgValue"
                            tools:ignore="RtlSymmetry" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_info1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dp_5"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    card_view:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        style="@style/subContainer"
                        android:background="@color/bg_grey"
                        android:padding="@dimen/dp_10">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivInsulin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@mipmap/avg_insulin"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="UsingOnClickInXml" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInsulinValue"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/sp_20"
                            android:text="@string/_0"
                            android:maxLength="7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivInsulin"
                            tools:ignore="RtlSymmetry"
                            tools:text="145" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvInsulin"
                            style="@style/textContainer"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:fontFamily="@font/axiforma_medium"
                            android:text="@string/avg_insulin"
                            android:textColor="@color/grey_3"
                            android:textSize="@dimen/sp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
