<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/container"
    android:background="@color/bg_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImage"
        style="@style/textContainer"
        android:layout_marginTop="@dimen/dp_20"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/sp_36"
        android:src="@mipmap/find_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChoosePlan"
        style="@style/textContainer"
        android:layout_width="match_parent"
        android:fontFamily="@font/axiforma_semibold"
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_25"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dp_25"
        android:text="@string/choose_your_plan"
        android:textColor="@color/black_2"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        tools:ignore="RtlSymmetry" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvChoosePlan">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/widthMatchOnly"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:elevation="@dimen/dp_5"
                card_view:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_grey"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/subContainer"
                    android:background="@color/bg_grey"
                    android:padding="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInst1"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_regular"
                        android:drawableStart="@mipmap/black_check"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@string/subcription_instruction_1"
                        android:textColor="@color/grey_4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInst2"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:drawableStart="@mipmap/black_check"
                        android:drawablePadding="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_regular"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="@string/subcription_instruction_2"
                        android:textColor="@color/grey_4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvInst1"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInst3"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/axiforma_regular"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:drawableStart="@mipmap/black_check"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="@string/subcription_instruction_3"
                        android:textColor="@color/grey_4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvInst2"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInst4"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:drawableStart="@mipmap/black_check"
                        android:drawablePadding="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_regular"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="@string/subcription_instruction_4"
                        android:textColor="@color/grey_4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvInst3"
                        tools:ignore="RtlSymmetry" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:elevation="@dimen/dp_5"
                card_view:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvInfo" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/subContainer"
                    android:background="@color/bg_grey"
                    android:padding="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMonthly"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_bold"
                        android:text="@string/monthly"
                        android:gravity="center"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/sp_18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMonthlyPrice"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_semibold"
                        android:text="@string/month"
                        android:gravity="center"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/sp_18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMonthly"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRecurringMonthly"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/axiforma_regular"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="@string/recurring_monthly_billing"
                        android:textColor="@color/grey_4"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMonthlyPrice"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMonthlySubscription"
                        style="@style/btn_style"
                        android:layout_width="match_parent"
                        android:text="@string/subscribe"
                        android:background="@mipmap/bg_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRecurringMonthly" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvYearly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:elevation="@dimen/dp_5"
                card_view:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvMonthly" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/subContainer"
                    android:background="@color/bg_grey"
                    android:padding="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvYearly"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_bold"
                        android:text="@string/yearly"
                        android:gravity="center"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/sp_18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvYearlyPrice"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_semibold"
                        android:text="@string/year"
                        android:gravity="center"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/sp_18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvYearly"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBilledYearly"
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:fontFamily="@font/axiforma_regular"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:text="@string/billed_yearly"
                        android:textColor="@color/grey_4"
                        android:gravity="center"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvYearlyPrice"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYearlySubscription"
                        style="@style/btn_style"
                        android:layout_width="match_parent"
                        android:text="@string/subscribe"
                        android:background="@mipmap/bg_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/dp_0"
                        android:layout_marginEnd="@dimen/dp_0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBilledYearly" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                style="@style/textContainer"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/axiforma_regular"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="@string/cancel_anytime"
                android:textColor="@color/grey_4"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvYearly"
                tools:ignore="RtlSymmetry" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:elevation="@dimen/dp_5"
                card_view:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/bg_grey"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCancel" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/subContainer"
                    android:background="@color/bg_grey"
                    android:padding="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/textContainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_10"
                        android:fontFamily="@font/axiforma_regular"
                        android:text="@string/cancel_subscription"
                        android:textColor="@color/grey_4"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>