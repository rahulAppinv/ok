<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_2"
    app:cardCornerRadius="@dimen/dp_20"
    card_view:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/bg_grey"
    android:elevation="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/container"
        android:background="@color/bg_grey"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleHeader"
            style="@style/subContainer"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/axiforma_medium"
            android:text="@string/title"
            android:textColor="@color/black_2"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/widthMatchOnly"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/axiforma_medium"
            android:text="@string/title"
            android:textColor="@color/grey_4"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleHeader"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescriptionHeader"
            style="@style/subContainer"
            android:layout_marginTop="@dimen/dp_15"
            android:fontFamily="@font/axiforma_medium"
            android:text="@string/description"
            android:textColor="@color/black_2"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            style="@style/widthMatchOnly"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/axiforma_medium"
            android:text="@string/title"
            android:textColor="@color/grey_4"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionHeader"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>