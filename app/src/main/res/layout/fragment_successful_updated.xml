<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context=".ui.logbook.test.TestLogsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSuccessfullyUpdated"
        style="@style/textContainer"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:drawableTop="@mipmap/successfully_updated_test_details"
        android:drawablePadding="@dimen/dp_30"
        android:ellipsize="end"
        android:fontFamily="@font/axiforma_semibold"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/successfully_updated_test_details"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toTopOf="@+id/tvMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessage"
        style="@style/textContainer"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:ellipsize="end"
        android:fontFamily="@font/axiforma_medium"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_5"
        android:text="@string/your_test_details_has_been_updated_successfully"
        android:textColor="@color/grey_3"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/layoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSuccessfullyUpdated"
        tools:ignore="RtlSymmetry" />

    <include
        android:id="@+id/layoutButton"
        layout="@layout/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>